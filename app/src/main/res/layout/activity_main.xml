<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lk.syxl.customview.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.lk.syxl.customview.view.SaleProgressView
            android:id="@+id/saleProgressView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:slideColor="#345"
            app:slideWidth="2dp"
            app:nearOverText="@string/nearOverText"
            app:overText="@string/overText"/>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:text="startService"/>
    <Button
        android:id="@+id/bt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopService"/>

    <Button
        android:id="@+id/bt_day_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="夜间模式"/>

    <Button
        android:id="@+id/bt_BouncingBallView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BouncingBallView"/>

    <Button
        android:id="@+id/bt_number_belong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="号码归属地查询"/>

    <Button
        android:id="@+id/bt_show_fild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHowFoldActivity"/>

    <Button
        android:id="@+id/bt_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HttpActivity"/>
    <Button
        android:id="@+id/bt_palette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PaletteActivity"/>
    <Button
        android:id="@+id/bt_sophix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sophix"/>
    <Button
        android:id="@+id/bt_sophix1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sophix"/>


</LinearLayout>
